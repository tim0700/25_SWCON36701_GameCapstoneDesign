# ============================================
# Google Cloud Configuration (필수)
# ============================================
# 팀 리더에게 받거나 Google Cloud Console에서 확인
# 자세한 설정 방법: ENV_SETUP_GUIDE.md 참조

# 프로젝트 ID (예: my-rpg-game-12345)
GOOGLE_CLOUD_PROJECT=your-project-id-here

# 서버 리전 - Gemini 2.5 Pro 지원 리전
# 지원: us-central1, us-east1, us-west1, europe-west1, asia-southeast1
GOOGLE_CLOUD_LOCATION=us-central1

# 서비스 계정 JSON 키 파일 경로
# 파일이 Backend/ 폴더에 있다면 파일명만 입력
# 예: my-service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=your-service-account-key.json

# Model Configuration (Optional - defaults provided)
GEMINI_MODEL=gemini-2.5-pro
TEMPERATURE=0.7
MAX_OUTPUT_TOKENS=8192

# Application Settings (Optional - defaults provided)
TEMPLATES_DIR=app/templates
OUTPUT_DIR=data/npcs
API_TIMEOUT=60
MAX_RETRIES=3

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
